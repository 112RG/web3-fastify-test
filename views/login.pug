extends layout

block content
  script(src=`/js/login.js`)
  script(src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.6.1-rc.0/web3.min.js" integrity="sha512-+4Gl8sbHe5qD5EQiPtIva4be9TwUmmzgYJUdGbhsLYNegQw4Quda/4QdZpJzx8cHq2s1F4PoIpAnERQ0hHTcNQ==" crossorigin="anonymous" referrerpolicy="no-referrer")
  title Login
  div(class="justify-content-center" style="width: 360px;padding: 8% 0 0;margin: auto;")
    form(method="POST", id="login")
      input(type="hidden" id="_csrf" name="_csrf" value=token)
      input(type="email" required class="form-control pad" id="email" name="email" placeholder="Email")
      input(type="password" required class="form-control pad" id="password" name="password" placeholder="Password")
      div(class="text-center" class="pad")
        button(class="btn btn-primary" style="width: 100%;height:50px;" type="submit" form="login") Login
    div(class="text-center" class="pad")
      button(class="btn btn-primary" style="width: 50%;height:50px;" id="meta") Login with MetaMask
      div(class="alert collapse" role="alert" id="status") Failed to login
        